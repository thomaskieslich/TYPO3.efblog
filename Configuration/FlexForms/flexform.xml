
<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<general>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:tkblog/Resources/Private/Language/locallang_db.xml:flexform_options_general</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>LLL:EXT:tkblog/Resources/Private/Language/locallang_db.xml:flexform_options_general_widgets</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:tkblog/Resources/Private/Language/locallang_db.xml:flexform_options_general_widgets_list</numIndex>
										<numIndex index="1">Post->list;Post->single</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:tkblog/Resources/Private/Language/locallang_db.xml:flexform_options_general_widgets_latest</numIndex>
										<numIndex index="1">Post->latestWidget</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:tkblog/Resources/Private/Language/locallang_db.xml:flexform_options_general_widgets_views</numIndex>
										<numIndex index="1">Post->viewsWidget</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:tkblog/Resources/Private/Language/locallang_db.xml:flexform_options_general_widgets_category</numIndex>
										<numIndex index="1">Post->categoryWidget</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">LLL:EXT:tkblog/Resources/Private/Language/locallang_db.xml:flexform_options_general_widgets_search</numIndex>
										<numIndex index="1">Post->searchWidget</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<!--startingpoint-->
					<persistence.storagePid>
						<TCEforms>
							<label>LLL:EXT:tkblog/Resources/Private/Language/locallang_db.xml:flexform_options_general_storage</label>
							<exclude>1</exclude>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>
						</TCEforms>
					</persistence.storagePid>
	
				</el>
			</ROOT>
		</general>
	</sheets>
</T3DataStructure>
